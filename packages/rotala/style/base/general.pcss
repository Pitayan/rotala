/* General */

/* box-sizing inherit */
*,
*:after,
*::before {
  box-sizing: inherit;
}

/* html */
html {
  box-sizing: border-box;
}

/* body */
body {
  @apply text-base;
  @apply leading-none;

  /* fix ios tap flikering */
  -webkit-tap-highlight-color: transparent;
  backface-visibility: hidden;
}
