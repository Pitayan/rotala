.$(menu) {
  @apply m-0;
  @apply list-none;
  @apply p-2;

  & &-item {
    @apply mt-0;
    @apply p-2;
    @apply relative;
    @apply no-underline;
    @apply outline-none;

    a {
      @apply block;
      @apply no-underline;
      @apply p-2;
    }

    &[disabled],
    &:disabled,
    &.disabled {
      @apply cursor-default;
      @apply pointer-events-none;
      @apply text-gray-400;
    }
  }
}