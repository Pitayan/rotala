.$(pagination) {
  @apply block;
  @apply list-none;
  @apply m-0;
  @apply py-4 px-0;

  & &-prev,
  & &-next,
  & &-item {
    @apply inline-block;
    @apply m-px;

    a {
      @apply text-center;
      @apply relative;
      @apply py-2 px-3;
    }

    &[disabled],
    &:disabled,
    &.disabled {
      @apply cursor-default;

      a {
        @apply pointer-events-none;
        @apply text-gray-400;
      }
    }
  }
}