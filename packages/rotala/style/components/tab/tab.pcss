.$(tab) {
  @apply flex;
  @apply items-center;
  @apply flex-wrap;
  @apply list-none;
  @apply m-0;

  & > &-item {
    @apply relative;
    @apply mt-0;

    a {
      @apply block;
      @apply py-2 px-2;
      @apply no-underline;

      color: inherit;
      transition: color .15s;
    }

    &[disabled],
    &:disabled,
    &.disabled {
      @apply cursor-default;

      a {
        @apply pointer-events-none;
        @apply text-gray-400;
      }
    }
  }
}