.$(icon) {
  @apply inline-block;
  @apply relative;
  @apply align-middle;
  @apply box-border;

  height: 1em;
  width: 1em;
  font-size: normal;

  &::before,
  &::after {
    @apply box-border;
    @apply absolute;
    @apply block;

    content: '';
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
  }

  &-combo {
    vertical-align: -15%;
  }
}