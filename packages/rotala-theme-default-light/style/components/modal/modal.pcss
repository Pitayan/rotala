.$(modal) {
  background: rgba(0,0,0, .25);

  &-container {
    @apply bg-white;
  }

  &-fullscreen {
    @apply p-0;

    .$(modal)-container {
      @apply rounded-none;
      @apply w-full;
      @apply h-full;
      @apply max-w-full;
      @apply min-h-full;
    }
  }

  &-scrollable {
    @apply overflow-y-auto;

    .$(modal)-container {
      max-height: inherit;
    }
  }
}