
.$(avatar) {
  & &-icon,
  & &-status {
    @apply absolute;
    @apply z-10;
    @apply rounded-full;
    @apply shadow-white;

    bottom: 11.36%;
    right: 11.36%;
    height: 1em;
    width: 1em;
    transform: translate(50%, 50%);
  }

  &&-rounded &-icon,
  &&-rounded &-status {
    bottom: 14.64%;
    right: 14.64%;
  }

  & &-status {
    padding: 2px;
    height: .5em;
    width: .5em;
  }
}